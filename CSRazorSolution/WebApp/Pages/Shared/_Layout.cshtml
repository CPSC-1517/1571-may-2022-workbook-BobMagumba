<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @*Removed bootstrap*@

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/holiday.css@0.9.8"/>
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/WebApp/mycss.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            @*Holiday.css menu*@
            <ul>
                <li><a asp-area="" asp-page="/Index">
                    <img src="~/img/WestWindLogo.png" alt="West wind thumbnail logo" title="Go to home"/>
                    </a></li>
                <li><a asp-area="" asp-page="/Index">Home</a></li>
                @*Submenu*@
                <li>
                    <span>Samples</span>
                    <ul>
                         <li><a asp-area="" asp-page="/Privacy">Privacy</a></li>
                         <li><a asp-area="" asp-page="/Samples/BasicDataManagement">Basic</a></li>
                         <li><a asp-area="" asp-page="/Samples/RegionQueryOne">Single Record Query</a></li>
                         <li><a asp-area="" asp-page="/Samples/PartialFilterSearch">Tabular Filter Query</a></li>
                    </ul>
                </li>
               
                <li><a asp-area="" asp-page="/Samples/Controls">Controls</a></li>
            </ul>
        </nav>
    </header>
    <div>
        <main>
            @RenderBody()
        </main>
    </div>

    <footer>      
            &copy; 2022 - WebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>